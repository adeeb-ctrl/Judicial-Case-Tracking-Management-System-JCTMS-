@model JCTMS.Core.Entities.Hearing

@{
    ViewData["Title"] = "Schedule Hearing";
}

<h1>Schedule Hearing</h1>
<h3>For Case: @ViewBag.CaseRef</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CaseID" />

            <div class="form-group mb-3">
                <label asp-for="HearingDate" class="control-label"></label>
                <input asp-for="HearingDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="HearingDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Remarks" class="control-label"></label>
                <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
                <a asp-controller="Cases" asp-action="Details" asp-route-id="@Model.CaseID" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
