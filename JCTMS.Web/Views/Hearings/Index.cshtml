@model IEnumerable<JCTMS.Core.Entities.Hearing>

@{
    ViewData["Title"] = "Upcoming Hearings";
}

<h1>Upcoming Hearings</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Case ID</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.HearingDate.ToString("yyyy-MM-dd HH:mm")
            </td>
             <td>
                @item.CaseID
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                <a asp-controller="Cases" asp-action="Details" asp-route-id="@item.CaseID" class="btn btn-sm btn-info">View Case</a>
            </td>
        </tr>
}
    </tbody>
</table>
