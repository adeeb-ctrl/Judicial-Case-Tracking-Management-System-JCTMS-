@model IEnumerable<JCTMS.Core.Entities.Party>

@{
    ViewData["Title"] = "All Parties";
}

<h1>All Parties Involved</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Case ID</th>
             <th>Contact</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="badge bg-secondary">@item.Role</span>
            </td>
            <td>
                @item.CaseID
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                <a asp-controller="Cases" asp-action="Details" asp-route-id="@item.CaseID" class="btn btn-sm btn-info">View Case</a>
            </td>
        </tr>
}
    </tbody>
</table>
